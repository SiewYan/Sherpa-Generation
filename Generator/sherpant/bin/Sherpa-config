#!/bin/sh

case $1 in
  --version)
    echo 2.2.5;;
  --prefix)
    echo /afs/cern.ch/work/s/shoh/analysis/SherpaStudies/darkPhoton/CMSSW_9_3_13/src/SherpaGeneration/Generator/sherpant;;
  --libs)
    hepmc2libs=$(echo "-L/cvmfs/cms.cern.ch/slc6_amd64_gcc630/external/hepmc/2.06.07-oenich/lib -R/cvmfs/cms.cern.ch/slc6_amd64_gcc630/external/hepmc/2.06.07-oenich/lib -L/cvmfs/cms.cern.ch/slc6_amd64_gcc630/external/hepmc/2.06.07-oenich/lib64 -R/cvmfs/cms.cern.ch/slc6_amd64_gcc630/external/hepmc/2.06.07-oenich/lib64 -lHepMC" | cut -d " " -f 1,3);
    echo -L/afs/cern.ch/work/s/shoh/analysis/SherpaStudies/darkPhoton/CMSSW_9_3_13/src/SherpaGeneration/Generator/sherpant/lib/SHERPA-MC -lSherpaMain $hepmc2libs;;
  --python-libs)
    echo /afs/cern.ch/work/s/shoh/analysis/SherpaStudies/darkPhoton/CMSSW_9_3_13/src/SherpaGeneration/Generator/sherpant/lib/python2.7/site-packages;;
  --load-mpi4py)
    echo ;;
  --incdir)
    echo /afs/cern.ch/work/s/shoh/analysis/SherpaStudies/darkPhoton/CMSSW_9_3_13/src/SherpaGeneration/Generator/sherpant/include/SHERPA-MC;;
  --libdir)
    echo /afs/cern.ch/work/s/shoh/analysis/SherpaStudies/darkPhoton/CMSSW_9_3_13/src/SherpaGeneration/Generator/sherpant/lib/SHERPA-MC;;
  --datadir)
    echo /afs/cern.ch/work/s/shoh/analysis/SherpaStudies/darkPhoton/CMSSW_9_3_13/src/SherpaGeneration/Generator/sherpant/share/SHERPA-MC;;
  --ldflags)
    hepmc2libs=$(echo "-L/cvmfs/cms.cern.ch/slc6_amd64_gcc630/external/hepmc/2.06.07-oenich/lib -R/cvmfs/cms.cern.ch/slc6_amd64_gcc630/external/hepmc/2.06.07-oenich/lib -L/cvmfs/cms.cern.ch/slc6_amd64_gcc630/external/hepmc/2.06.07-oenich/lib64 -R/cvmfs/cms.cern.ch/slc6_amd64_gcc630/external/hepmc/2.06.07-oenich/lib64 -lHepMC" | cut -d " " -f 1,3);
    echo -L/afs/cern.ch/work/s/shoh/analysis/SherpaStudies/darkPhoton/CMSSW_9_3_13/src/SherpaGeneration/Generator/sherpant/lib/SHERPA-MC -lSherpaMain $hepmc2libs -rdynamic -Wl,--no-as-needed;;
  --cppflags)
    echo -I/afs/cern.ch/work/s/shoh/analysis/SherpaStudies/darkPhoton/CMSSW_9_3_13/src/SherpaGeneration/Generator/sherpant/include/SHERPA-MC;;
  --cxx)
    echo g++ -Wl,--no-as-needed;;
  *)
    echo "Sherpa-config: configuration tool for the Monte Carlo";
    echo "               event generator Sherpa: http://sherpa.hepforge.org";
    echo "Options:";
    echo "  Sherpa-config --version : returns Sherpa version";
    echo "  Sherpa-config --prefix  : returns the installation path";
    echo "  Sherpa-config --incdir  : returns the path of Sherpa headers";
    echo "  Sherpa-config --libs    : returns the linker line to link with Sherpa";
    echo "  Sherpa-config --datadir : returns the path of Sherpa data (like Decaydata, PDFs)";
    echo "  Sherpa-config --ldflags : returns the LDFLAGS used for Sherpa";
    echo "  Sherpa-config --cppflags : returns the preprocessor FLAGS needed for Sherpa headers";;
esac

